<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/child_vector"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
             android:layout_marginEnd="8dp"
            android:src="@drawable/child"
            app:civ_border_color="#FF5722"
            app:civ_border_width="2dp"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/child_vector"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/student_name"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grade 2"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textSize="15sp"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="30sp"
                        android:background="@drawable/spencil"
                        android:padding="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abu Baker Alsedig"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_format_atendance"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/attendance"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:textSize="15sp"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="20sp"
                        android:background="#AD8B7A"
                        android:padding="5dp"
                        />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_teachers"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/teachers"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:textSize="15sp"/>
                </LinearLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/attendance_today"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:gravity="center_horizontal">
                            <View
                                android:layout_width="1dp"
                                android:layout_height="20sp"
                                android:background="@drawable/spencil"
                                />
                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/math"
                                    />
                            </androidx.cardview.widget.CardView>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="20sp"
                                android:background="#AD8B7A"
                                />
                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Arabic"
                                    />
                            </androidx.cardview.widget.CardView>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="20sp"
                                android:background="#AD8B7A"
                                android:padding="5dp"
                                />
                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Science"
                                    android:padding="5dp"/>
                            </androidx.cardview.widget.CardView>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="20sp"
                                android:background="@drawable/spencil"
                                android:padding="5dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="10dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="attend"
                                    android:textColor="#4CAF50"
                                    android:padding="5dp"/>
                            </androidx.cardview.widget.CardView>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="20sp"
                                android:background="#AD8B7A"
                                android:padding="5dp"
                                />
                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="attend"
                                    android:textColor="#4CAF50"
                                    android:padding="5dp"/>
                            </androidx.cardview.widget.CardView>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="20sp"
                                android:background="#AD8B7A"
                                android:padding="5dp"
                                />
                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="attend"
                                    android:textColor="#4CAF50"
                                    android:padding="5dp"/>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attendance Last Days"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">

                            <View
                                android:layout_width="80dp"
                                android:layout_height="50sp"
                                android:background="@drawable/ic_arrow_down"
                                android:padding="5dp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>